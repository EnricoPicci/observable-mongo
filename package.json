{
  "name": "observable-mongo",
  "version": "2.1.9",
  "description": "Functions that provide 'node mongodb driver APIs' as Observables",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.2.5",
    "@types/mongodb": "^3.0.5",
    "@types/node": "^10.12.18",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.1",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "mongodb": "^3.0.3",
    "rxjs": "^6.3.3"
  },
  "scripts": {
    "test-mocha": "mocha -r ts-node/register --require source-map-support/register --recursive src/**/*.spec.ts ",
    "tsc": "tsc",
    "test": "npm run tsc  && nyc npm run test-mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublishOnly": "npm version patch",
    "preversion": "npm test",
    "version": "npm run tsc && git add -A dist",
    "postversion": "git push"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "coverage",
      "dist"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnricoPicci/observable-mongo.git"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "observable",
    "rxjs"
  ],
  "author": "Enrico",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EnricoPicci/observable-mongo/issues"
  },
  "homepage": "https://github.com/EnricoPicci/observable-mongo#readme"
}
